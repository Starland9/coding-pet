{
  "name": "coding-pet",
  "displayName": "coding-pet",
  "description": "Un animal de compagnie qui Ã©volue avec vos habitudes de code",
  "version": "0.0.1",
  "publisher": "Starland",
  "repository": {
    "type": "git",
    "url": "https://github.com/Starland9/coding-pet"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codingPet.showPet",
        "title": "Voir mon Animal de Compagnie",
        "category": "Coding Pet"
      },
      {
        "command": "codingPet.feedPet",
        "title": "Nourrir l'Animal",
        "category": "Coding Pet"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codingPet",
          "title": "Coding Pet",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "codingPet": [
        {
          "id": "petStatus",
          "name": "Statut de l'Animal",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codingPet.feedPet",
          "when": "view == petStatus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
