{
  "name": "coding-pet",
  "displayName": "Coding Pet",
  "description": "ü§ñ Your virtual coding companion that evolves with your programming habits! Features beautiful glassmorphism UI, XP system, and real-time reactions to your coding activity.",
  "version": "0.0.6",
  "publisher": "Starland",
  "author": {
    "name": "Starland9",
    "url": "https://github.com/Starland9"
  },
  "license": "MIT",
  "homepage": "https://github.com/Starland9/coding-pet#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Starland9/coding-pet"
  },
  "bugs": {
    "url": "https://github.com/Starland9/coding-pet/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "pet",
    "companion",
    "gamification",
    "productivity",
    "fun",
    "coding",
    "tamagotchi",
    "virtual pet",
    "developer experience",
    "motivation"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codingPet.showPet",
        "title": "ü§ñ Show My Coding Pet",
        "category": "Coding Pet",
        "icon": "$(heart)"
      },
      {
        "command": "codingPet.feedPet",
        "title": "üçé Feed Pet",
        "category": "Coding Pet",
        "icon": "$(symbol-food)"
      },
      {
        "command": "codingPet.resetPet",
        "title": "üîÑ Reset Pet Data",
        "category": "Coding Pet"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codingPet",
          "title": "Coding Pet",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "codingPet": [
        {
          "id": "petStatus",
          "name": "Pet Status",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codingPet.feedPet",
          "when": "view == petStatus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
